@model EmployeeViewModel

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Afdeling</th>
            <th>Email</th>
            <th>Totaal in bezit</th>
            
            <th>Actie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
        <tr>
            <td><a asp-controller="Employee" asp-action="Detail" asp-route-id="@employee.Id">@employee.Name</a></td>
            <td>@employee.Department</td>
            <td>@employee.Email</td>
            <td>@employee.Items.Count()</td>
         
            <td>
                @if (employee.Name == User.Identity.Name)
                {
                <a class="btn btn-info" asp-area="" asp-controller="Employee" asp-action="Update" asp-route-id="@employee.Id">Aanpassen</a>
                <a class="btn btn-danger" asp-area="" asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id">Verwijder</a>
            }
                </td>
            </tr>
        }
    </tbody>
</table>