@model StudentViewModel

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Studie</th>
            <th>Email</th>
            <th>Geleende kunst</th>
            <th>Actie</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var student in Model.Students)
        {
        <tr>
            <td><a asp-controller="Student" asp-action="Detail" asp-route-id="@student.Id">@student.Name</a></td>
            <td>@student.Major</td>
            <td>@student.Email</td>
            <td>@student.Checkouts.Count()</td>
           
           
            <td>
                @if (@student.Name == User.Identity.Name)
                {
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-info" asp-area="" asp-controller="Student" asp-action="Update" asp-route-id="@student.Id">Aanpassen</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id">Verwijder</a>
                        </div>
                        }
                </td>
            
        </tr>
        }
    </tbody>
  
</table>