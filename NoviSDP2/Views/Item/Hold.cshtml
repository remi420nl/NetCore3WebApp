@model ItemViewModel

<h2>Kunst</h2>
<div class="row orderForm">

    <form asp-controller="Item" asp-action="Hold" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Reserveer een kunst item</h3>
        @Html.HiddenFor(m => Model.Id)
        <div class="form-group">
            <label class="col-md-8 control-label"> Student kiezen</label>
            <div class="col-md-8">

                @Html.DropDownListFor(y => y.Item.HolderId,
                                             new SelectList(Model.Students.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"),

                                             new { @class = "form-control" })
            
              
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-6 control-label">Maanden</label>
            <div class="col-md-8">

                @Html.DropDownListFor(y => y.Months,
                                              Enumerable.Range(1, 10).Select(i => new SelectListItem { Text = i.ToString(), Value = i.ToString() }),
                                                new { @class = "form-control" })
               
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Terug" asp-controller="Item" asp-action="Index" />
                <input class="btn btn-success" type="submit" value="Plaats reservering" />
            </div>
        </div>
    </form>
</div>