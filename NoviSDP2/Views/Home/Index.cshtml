@model IEnumerable<Item>

    <script>
        $(document).ready(function () {

            $("#homelink").addClass("active");
        });
        $(document).ready(function () {
            $('#slider').find('.carousel-item').first().addClass('active');
        });
        $('#myCarousel').find('.item').first().addClass('active');
    </script>

<div id="home" class=" text-center">
    
    <div class="row">
        <div class="col-sm-4 homepage">
            <h3 class="text-center text-black-50 ">Welkom: @ViewBag.Name</h3>
            <p>Deze website laat werknemers van Novi Hogeschool kunst uit privebezit uitlenen aan Novi studenten.</p>
            <p>Het uitlenen is gratis maar er kan op vrijwillige basis een donatie worden gedaan in de vorm van crypto.</p>
            <p>De uitleen periode is minimaal 1 maand tot maximaal 12 maanden</p>
        </div>
        <div class="col-sm-8">
            <p class="text-center font-weight-bold">Momenteel in de collectie</p>
            <div id="slider" class="carousel slide" data-ride="carousel">
                <ul class="carousel-indicators">
                    <li data-target="#slider" data-slide-to="0" class="active"></li>
                    <li data-target="#slider" data-slide-to="1"></li>
                   
                </ul>

                <div class="carousel-inner">
                   


                    @foreach (Item i in Model)
                    {
                        <div class="carousel-item">
                            <img style="max-height:395px; " src="@i.ImageUrl" />

                            <h1 class="text-black-50">@i.Name</h1>
                        </div>
                    }
                </div>
                <a class="left carousel-control" href="#slider" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="right carousel-control" href="#slider" data-slide="next">
                    <span class="carousel-control-next-icon "></span>
                </a>

            </div>
        </div>
    </div>
</div>
