@model RegisterViewModel


<div class="row orderForm">
    <form asp-controller="Home" asp-action="Register" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Registratie</h3>

        <div class="form-group">
            <label asp-for="UserName" class="col-md-2 control-label"></label>
            <div class="col-md-8">
                <input asp-for="UserName" class="form-control" placeholder="Gebruikersnaam" />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input asp-for="Name" class="form-control" placeholder="naam" />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input asp-for="Password" class="form-control" placeholder="Wachtwoord" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="Email" class="form-control" placeholder="voorbeeld@novi.nl" />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Info" class="form-control" placeholder="Studierichting of Afdeling" />

                <div class="col-md-16">

                    @Html.DropDownListFor(y => y.IdentyRole,
                                                 new SelectList(Model.IdentyRoles.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"),

                                                 new { @class = "form-control" })

                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Terug" asp-controller="Home" asp-action="Index" />
                <input class="btn btn-success" type="submit" value="Registreer" />

            </div>
        </div>
        @ViewBag.Error
    </form>
</div>
